<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Produtos Disponíveis para a Compra">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1" />
        <ToolbarItem Text="Adicionar Produto" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Spacing="10" Padding="10">
        <SearchBar x:Name="txt_search" Margin="-15, 0, 0, 0" Placeholder="Busca de Produtos" TextChanged="txt_search_TextChanged"/>
        
        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">
            <ListView x:Name="lst_produtos" ItemSelected="lst_produtos_ItemSelected" IsPullToRefreshEnabled="True" Refreshing="lst_produtos_Refreshing">
            <ListView.Header>
                <Grid ColumnDefinitions="30, 100, 80, 50, 90">
                    <Label Grid.Column="0" Text="ID" Padding="5" FontAttributes="Bold" />
                    <Label Grid.Column="1" Text="Descrição" Padding="5" FontAttributes="Bold" />
                    <Label Grid.Column="2" Text="Preço" Padding="5" FontAttributes="Bold" />
                    <Label Grid.Column="3" Text="Quantidade" Padding="5" FontAttributes="Bold" />
                    <Label Grid.Column="4" Text="Total" Padding="5" FontAttributes="Bold" />
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>

                        <Grid ColumnDefinitions="30, 100, 80, 50, 90" BackgroundColor="{StaticResource Gray100}">
                            <Label Grid.Column="0" Text="{Binding Id}" Padding="5" />
                            <Label Grid.Column="1" Text="{Binding Descricao}" Padding="5" />
                            <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:C}'}" Padding="5" />
                            <Label Grid.Column="3" Text="{Binding Quantidade}" Padding="5" />
                            <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:C}'}" Padding="5" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Frame>
    </StackLayout>
</ContentPage>